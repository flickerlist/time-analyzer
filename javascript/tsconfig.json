{
  "allowSyntheticDefaultImports": false,
  "compilerOptions": {
    "module": "CommonJS",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "plugins": [
      {
        "transform": "ts-transform-paths"
      }
    ],
    "paths": {
      "time-analyzer": ["src/index.ts"],
      "time-analyzer/*": ["src/*"],
    }
  },
  "include": ["src", "__test"],
  "exclude": ["node_modules", "dist"]
}