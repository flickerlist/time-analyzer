{
  "allowSyntheticDefaultImports": false,
  "compilerOptions": {
    "module": "CommonJS",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "plugins": [
      {
        "transform": "ts-transform-paths"
      }
    ],
    "paths": {
      "@/lib/*": ["lib/*"]
    }
  },
  "include": ["lib", "__test"],
  "exclude": ["node_modules", "dist"]
}